@model (List<Interesse.Domain.Entities.Review>, bool)

<section class="section">
    @if (!Model.Item2)
    {
        <h2 class="section-title">
            Отзывы
        </h2>
    }
    <div class="row equal">
        @foreach (var review in Model.Item1)
        {
            <div class="col-md-3 col-sm-6">
                <div class="review">
                    <img src="@(String.IsNullOrEmpty(review.Photo) ? "/img/logo_grey.png" : $"/uploads/reviews/{review.Photo}")" alt="@review.Name"
                         class="@("review-photo image-contain")" />
                    <p class="review-name">
                        @review.Name
                    </p>
                    <p class="review-description">
                        @review.Description
                    </p>
                    <p class="review-text">
                        @review.Text
                    </p>
                </div>
            </div>
        }
    </div>
    @if (!Model.Item2)
    {
        <div class="section-actions">
            <a asp-page="/Reviews" class="btn btn-primary btn-max">
                Все отзывы
            </a>
        </div>
    }
</section>
